<Window x:Class="Pagina_Principal.Registros_Datos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pagina_Principal"
        mc:Ignorable="d"
        Title="Registros_Datos" WindowState="Maximized" WindowStartupLocation="CenterScreen" Width="1101" Height="505">
    <Grid Margin="0,40,0,0">


        <!--DEFINIR COLUMNAS-->
        <Image Source="imagen.png" Stretch="Uniform" Margin="-113,-44,899,0" />
        <Label Content="REGISTROS DE DATOS" HorizontalAlignment="Left" Margin="648,-4,0,0" VerticalAlignment="Top" Width="378"
               FontFamily="Poppins" FontSize="26" FontWeight="Bold" Grid.ColumnSpan="3" />

        <!-- PRIMERA SECCIÓN PARA EL FORMULARIO-->
        <Button Content="1" Background="#FF505D89" Foreground="White" BorderBrush="#FF505D89" FontSize="18" FontWeight="Bold"
                HorizontalAlignment="Left" Margin="413,88,0,0" VerticalAlignment="Top" Width="26" Height="25">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="0"
                    CornerRadius="40">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Height="29" Margin="8,2,9,0"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Label Content="Información de la Operadora" HorizontalAlignment="Left" Margin="449,82,0,0" VerticalAlignment="Top" Width="378" FontFamily="Poppins" FontSize="24" />

        <Label Content="Logo (Imagen)" HorizontalAlignment="Left" Margin="425,146,0,0" VerticalAlignment="Top" Width="138" FontFamily="Poppins" FontSize="18" />
        
        



    </Grid>
</Window>
