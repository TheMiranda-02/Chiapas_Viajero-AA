<Window x:Class="Pagina_Principal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pagina_Principal"
        mc:Ignorable="d"
        Title="Chiapas Viajero" Height="588" Width="452" WindowState="Normal">
    <Grid>
        
        <!-- FONDO DE LA HOJA -->
        <Grid.Background>
            <ImageBrush ImageSource="img/fondo.png" Stretch="Fill" RenderOptions.BitmapScalingMode="HighQuality"/>
        </Grid.Background>
         
        
        <!--LOGO DEL PROYECTO CHIAPAS VIAJERO AA-->
        <Image Source="img/Logo.png" Margin="62,54,82,256" SnapsToDevicePixels="True"  RenderOptions.BitmapScalingMode="HighQuality" UseLayoutRounding="True"/>
        
        <!--CONTENIDO DEL LOGIN-->

        <Label Content="¡Bienvenido!" Margin="119,334,118,171" FontFamily="Poppins" FontSize="32" FontWeight="Bold" Foreground="White"/>
        
        <!--Iniciar Sesión-->
        <Button Content="Iniciar sesión" FontFamily="Poppins"  Margin="76,416,206,87" Background="#FF505D89" Foreground="White" FontSize="18" BorderBrush="#FF505D89" Click="BtnIniciarSesion"/>
        
        <!--Crear Cuenta-->
        <Button FontFamily="Poppins"
                Margin="222,416,59,87"
                Background="White"
                Foreground="Black"
                FontSize="18"
                BorderBrush="White">
            <Button.Content>
                <TextBlock Text="Crear Cuenta">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                                  ShadowDepth="0.1"
                                  Opacity="0.2"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Button.Content>
        </Button>


    </Grid>
</Window>
